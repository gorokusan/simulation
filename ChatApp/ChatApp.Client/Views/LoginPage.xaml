<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ChatApp.Client.ViewModels"
             x:Class="ChatApp.Client.Views.LoginPage"
             Title="Login">

    <StackLayout Padding="30">
        <Label Text="ログイン" FontSize="Large" HorizontalOptions="Center" />
        
        <Entry x:Name="UserNameEntry" Placeholder="ユーザー名" />
        <Entry x:Name="PasswordEntry" Placeholder="パスワード" IsPassword="True" />
        
        <Button Text="ログイン" Clicked="OnLoginButtonClicked" />
    </StackLayout>

</ContentPage>